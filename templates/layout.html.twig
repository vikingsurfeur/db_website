{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<!-- header -->
	<header class="container px-5 header">
		<div class="row justify-space-between mnw-100">
			<div
				class="col-xs-6">
				<!-- TODO: Replace the logo -->
				<a href="{{ path('app_home') }}">
					<img 
						src="{{ asset('build/images/icons/david_bouscarle_logo.png') | imagine_filter('header_logo')}}" 
						alt="David Bouscarle logo"
					>
				</a>
			</div>
			<a class="col-xs-6 burger">
				<span class="burger__line burger__line--top"></span>
				<span class="burger__line burger__line--bottom"></span>
			</a>
		</div>
	</header>

	<!-- menu -->
	<nav class="menu">
		<div class="menu__bg__layer">
			<ul class="menu__list">
				<li class="menu__item">
					<a 
						class="menu__link" 
						href="" 
						data-bg="{{ asset('build/images/placeholder/placeholder_img_landscape.jpg') }}"
					>
						Home
					</a>
				</li>
				<li class="menu__item">
					<a 
						class="menu__link" 
						href="" 
						data-bg="{{ asset('build/images/placeholder/placeholder_img_landscape_2.jpg') }}"
					>
						Portfolio
					</a>
				</li>
				<li class="menu__item">
					<a 
						class="menu__link" 
						href="" 
						data-bg="{{ asset('build/images/placeholder/placeholder_img_landscape.jpg') }}"
					>
						About me
					</a>
				</li>
				<li class="menu__item">
					<a 
						class="menu__link" 
						href="" 
						data-bg="{{ asset('build/images/placeholder/placeholder_img_landscape_2.jpg') }}"
					>
						Contact
					</a>
				</li>
			</ul>
		</div>
	</nav>
	{% block content %}

		{# flashes #}
		{% block flashes %}
			{% for label, flashes in app.session.flashbag.all %}
				{% for flash in flashes %}
					{# TODO: Style flash messages #}
				{% endfor %}
			{% endfor %}
		{% endblock %}
		{# end flashes #}
	{% endblock %}
{% endblock %}

